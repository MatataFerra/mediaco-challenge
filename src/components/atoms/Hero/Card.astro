---
import type { BackgroundColor } from "@lib/types"

interface Props {
	background?: BackgroundColor
	classes?: string
}

const { background = "bg-facebook", classes } = Astro.props
---

<article class:list={["w-40 -skew-x-12 transform", background, classes]}>
	<section
		class="flex h-full skew-x-12 transform flex-col items-center justify-center gap-2 px-8 py-4"
	>
		<slot name="content" />
	</section>
</article>

<style>
	.checked {
		color: orange;
	}
</style>
