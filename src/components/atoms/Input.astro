---
interface Props {
	type: astroHTML.JSX.HTMLInputTypeAttribute | null | undefined
	placeholder: string
	classes?: string
}

const { type = "text", placeholder, classes } = Astro.props
---

<input
	{type}
	{placeholder}
	class="h-16 w-full rounded-md border border-slate-500 p-6 outline-none focus:ring focus:ring-lake"
	class:list={[classes]}
/>
