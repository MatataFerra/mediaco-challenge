---
import PlumbingIcon from "@root/public/assets/plumbing-white.webp"
import { Image } from "astro:assets"

interface Props {
	description: string
}

const { description }: Props = Astro.props
---

<article class="grid h-80 w-full grid-rows-[1fr,auto]">
	<section class="z-0 col-start-1 col-end-2 row-start-1 row-end-3 size-full bg-slate-500"></section>
	<section
		class="z-10 col-start-1 col-end-2 row-start-2 row-end-3 flex h-full w-11/12 items-center gap-8 bg-dark-lake [clip-path:_polygon(0_0,_90%_0,_100%_100%,_0_100%,_0_50%)]"
	>
		<div class="flex h-full w-16 items-center bg-lake p-2">
			<Image src={PlumbingIcon} alt="White plumbing icon" />
		</div>
		<p class="p-2 text-xl font-bold uppercase text-primary">{description}</p>
	</section>
</article>
